{
    "env": {
        "es2021": true,
        "node": true
    },

    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "@typescript-eslint"
    ],
    "rules": {
        "prettier/prettier": "error",
        "new-cap": "off",
        "no-undef": "off",
        "no-unused-vars": "off"
    },
     "extends": [
        "prettier-standard"
    ]

}
